{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",
    "jsx": "react",
    /* Modules */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
  },
  "exclude": ["node_modules"]
}
